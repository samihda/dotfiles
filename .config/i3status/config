# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

# default: /etc/i3status.conf

general {
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "battery all"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "tztime local"
# order += "disk /"
# order += "load"
# order += "ipv6"

cpu_usage {
        format = "CPU: %usage"
}

wireless _first_ {
        format_up = "%essid"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        # format_up = "E: %ip (%speed)"
        format_up = "%ip"
        format_down = ""
}

battery all {
        # format = "%status %percentage - %remaining"
        format = "BAT: %status %percentage - %remaining"
        last_full_capacity = true
        integer_battery_capacity = true
        low_threshold = 30
        threshold_type = percentage
        # status_bat= "ðŸ”‹"
        # status_chr= "âš¡"
        status_bat= ""
        status_chr= ""
        status_unk= "?"
        hide_seconds = true
}

tztime local {
        format = "%d/%m %H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

volume master {
        # format = "ðŸ”Š %volume"
        # format_muted = "ðŸ”‡"
        format = "VOL: %volume"
        format_muted = "MUTE"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
